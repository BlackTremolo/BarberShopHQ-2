<%= @barbers %>
<script type="text/javascript">
  $(function(){
 
    $('#datetimepicker').datetimepicker();
    $('#color').simplecolorpicker();
  
  });
</script>

<h2>На этой странице вы можете записаться в Barber Shop</h2>

<form action="/visit" method="POST">
    <div>
      <label class="form-label">Ваше имя</label>
      <input name="username" type="text"  class="form-control" placeholder="Введите ваше имя" value="<%= @username %>">
    </div>

    <div>
      <label class="form-label">Ваш телефон</label>
      <input name="phone" type="text"  class="form-control" placeholder="Введите ваш номер" value="<%= @phone %>" >
    </div>

    <div>
      <label class="form-label">Когда хотите прийти?</label>
      <input id="datetimepicker" name="datestamp" type="text"  class="form-control" placeholder="Дата и время" value="<%= @datestamp %>">
    </div>

    <div>
      <label class="form-label">Выбирите парикмахера</label>
      <select name="barber">
        <% @barbers.each do |barber|%>
        <option <%= @barber == barber[1] ? 'selected' : '' %>><%= barber[1] %></option>
        <% end %>
       <%#  <option <%= @barber == 'Jessia' ? 'selected' : '' %>>Jessia</option> 
        <%# <option <%= @barber == 'Gus' ? 'selected' : '' %>>Gus</option> %> %>
     </select>  
    </div>
   
    <div>  
      <label class="form-label">Выбирите цвет</label>
      <select id="color" name="color">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Записаться</button>
</form>